{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@rxts/ngrx": ["src/public-api"],
      "lodash": ["lodash-es"]
    },
    "strict": true,
    "target": "es5"
  }
}
